<!DOCTYPE html>
<html>
<head>
  <title>Blogger2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="flash">
    <%= flash.notice %>
  </p>
  <div class="container">
    <div id="content">
      <%= yield %>
      <hr>
      <h6>
        <% if logged_in? %>
          <%= "Logged in as #{current_user.username}" %>
          <%= link_to "logout", logout_path, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "login", login_path, class: "btn btn-primary" %>
        <% end %>
      </h6>
    </div>
  </div>
</body>
</html>
