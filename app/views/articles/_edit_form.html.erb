<button type="button" data-toggle="modal" data-target="#myEdit" class="btn">Edit this Article?</button>

<div id="myEdit" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Edit Article</h3>
  </div>
  <div class="modal-body">
    <%= form_for(@article) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :style => "width:520px;" %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 6, :style => "width:520px;"  %>
  </p>
  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, :style => "width:520px;" %>
  </p>
  </div>
  <div class="modal-footer">
      <p>
        <%= f.submit 'Submit', class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>