<button type="button" data-toggle="modal" data-target="#myModal" class="btn">Create a new Article?</button>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">New Article</h3>
  </div>
  <div class="modal-body">
    <%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :style => "width:100%;" %>
  </p>
  <p>
    <%= f.label :body, "Main text, you may use HTML tags such as <p> and <strong> for formatting." %>
    <%= f.text_area :body, rows: 6, :style => "width:100%;" %>
  </p>
  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, :style => "width:100%;" %>
  </p>
  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium), class: "img-polaroid"  %>
    <% end %>
    <%= f.label :image, "Attach an Image" %>
    <%= f.file_field :image, :style => "width:100%;" %>
  </p>
  </div>
  <div class="modal-footer">
      <p>
        <%= f.submit 'Submit', class: "btn btn-primary", :style => "width:100%;"  %>
      </p>
    <% end %>
  </div>
</div>