<h1>All Articles</h1>
<div class="row">

  <div class="span3">
    <%= link_to "Sign up", new_author_path %>
  </div>

  <div class="span9">
    <ul class="thumbnails">
      <% @articles.each do |article| %>
        <li class="span3">
          <div class="thumbnail">
            <p style="overflow:hidden; max-height:200px"><%= link_to image_tag(article.image.url(:medium), :style => "width:100%; border-radius:3px"), article_path(article) %></p>
            <%= link_to article.title, article_path(article) %>
          </div>
        </li> 
      <% end %>
    </ul>
  </div>
</div>
<div class="span4 offset4">
<% if logged_in? %>
  <%= render partial: 'articles/form' %>
<% end %>
</div> 