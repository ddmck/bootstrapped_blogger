<div class="row">
  <div class="span9">
    <ul class="thumbnails">
      <% @articles.each do |article| %>
        <li class="span3">
          <div class="thumbnail">
            <p style="overflow:hidden; max-height:200px">
              <%= link_to image_tag(article.image.url(:medium), :style => "width:100%; border-radius:3px"), article_path(article) %>
            </p>
            <%= link_to article.title, article_path(article) %>
          </div>
        </li> 
      <% end %>
    </ul>
  </div>
</div>
<%= render partial: "layouts/nav_footer_index" %>
