<h2><%= @article.title %></h2>

<p><%= @article.body %></p>

<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<div class="row">
  <div class="span2">
<%= render partial: 'comments/form' %>
  </div>
  <div class="span6 well well-small", style="background:white; border:none; box-shadow:none">
    <p style="font-size:20px"><strong>Comments (<%= @article.comments.size %>)</strong></p>
<%= render partial: 'articles/comment', collection: @article.comments %>
  </div>
</div>
<%= link_to "Back to Articles List", articles_path, class: "btn" %> <%= link_to "Delete this article", article_path, method: :delete, confirm: "Really delete the article?", class: "btn btn-danger" %> <%= render partial: 'articles/edit_form' %>

